<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ConfirmPage">


    <TextView
        android:id="@+id/upahKerjaan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:text="@string/upahKerjaan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="16dp"
        android:text="Title Pekerjaan"
        app:layout_constraintBottom_toTopOf="@+id/upahLabel"
        app:layout_constraintStart_toStartOf="@+id/upahLabel" />

    <TextView
        android:id="@+id/upahLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:text="Upah Pekerjaan"
        app:layout_constraintEnd_toStartOf="@+id/upahKerjaan"
        app:layout_constraintTop_toTopOf="@+id/upahKerjaan" />

    <TextView
        android:id="@+id/kontakLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="16dp"
        android:text="Kontak Handle"
        app:layout_constraintStart_toStartOf="@+id/upahLabel"
        app:layout_constraintTop_toBottomOf="@+id/upahLabel" />

    <TextView
        android:id="@+id/titleKerjaan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/titleKerjaan"
        app:layout_constraintBottom_toTopOf="@+id/upahKerjaan"
        app:layout_constraintStart_toStartOf="@+id/upahKerjaan" />

    <TextView
        android:id="@+id/kontakHandle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="@string/kontakHandle"
        app:layout_constraintStart_toStartOf="@+id/upahKerjaan"
        app:layout_constraintTop_toBottomOf="@+id/upahKerjaan" />

    <Button
        android:id="@+id/uploadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:background="@drawable/buttonbg"
        android:text="Upload"
        app:layout_constraintEnd_toEndOf="@+id/warningLabel"
        app:layout_constraintStart_toStartOf="@+id/warningLabel"
        app:layout_constraintTop_toBottomOf="@+id/kontakHandle" />

    <TextView
        android:id="@+id/warningLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginBottom="25dp"
        android:text="Pastikan data benar"
        app:layout_constraintBottom_toTopOf="@+id/titleKerjaan"
        app:layout_constraintStart_toStartOf="@+id/titleLabel" />

</androidx.constraintlayout.widget.ConstraintLayout>