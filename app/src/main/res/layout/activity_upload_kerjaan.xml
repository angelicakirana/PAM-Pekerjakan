<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadKerjaan">

    <TextView
        android:id="@+id/titleKerja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="title kerja"
        app:layout_constraintBottom_toTopOf="@+id/upahKerja"
        app:layout_constraintStart_toStartOf="@+id/upahKerja" />

    <TextView
        android:id="@+id/upahKerja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="44dp"
        android:text="upah kerja"
        app:layout_constraintBottom_toTopOf="@+id/inputTitleKerja"
        app:layout_constraintStart_toStartOf="@+id/inputTitleKerja" />

    <Button
        android:id="@+id/simpanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="70dp"
        android:text="simpan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputUpahKerja" />

    <EditText
        android:id="@+id/inputTitleKerja"
        android:layout_width="234dp"
        android:layout_height="44dp"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="244dp"
        android:ems="10"
        android:hint="Masukkan nama pekerjaan"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputUpahKerja"
        android:layout_width="223dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Masukkan upah kerja"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/inputTitleKerja"
        app:layout_constraintTop_toBottomOf="@+id/inputTitleKerja" />
</androidx.constraintlayout.widget.ConstraintLayout>